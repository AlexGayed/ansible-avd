{# Leaf underlay and overlay router bgp peer groups configuration #}
{% if type == "l3leaf" %}
{# Underlay network peering #}
{%     if ( underlay_routing_protocol|upper == "BGP" or underlay_routing_protocol|upper == "EBGP") %}
    IPv4-UNDERLAY-PEERS:
      type: ipv4
      remote_as: {{ spine.bgp_as }}
      password: "{{ bgp_peer_groups.IPv4_UNDERLAY_PEERS.password }}"
      maximum_routes: 12000
      send_community: true
{# MLAG iBGP peering #}
{%         if leaf.mlag == true %}
    MLAG-IPv4-UNDERLAY-PEER:
      type: ipv4
      remote_as: {{ leaf.bgp_as }}
      next_hop_self: true
      password: "{{ bgp_peer_groups.MLAG_IPv4_UNDERLAY_PEER.password }}"
      maximum_routes: 12000
      send_community: true
{%         endif %}
{%     endif %}
{# Overlay network peering #}
{%     if ( overlay_routing_protocol|upper == "BGP" or overlay_routing_protocol|upper == "EBGP" ) %}
    EVPN-OVERLAY-PEERS:
      type: evpn
      remote_as: {{ spine.bgp_as }}
      update_source: Loopback0
      bfd: true
      ebgp_multihop: 3
      password: "{{ bgp_peer_groups.EVPN_OVERLAY_PEERS.password }}"
      send_community: true
      maximum_routes: 0
{%     elif overlay_routing_protocol|upper == "IBGP" %}
    EVPN-OVERLAY-PEERS:
      type: evpn
      remote_as: {{ bgp_as }}
      update_source: Loopback0
      bfd: true
      ebgp_multihop: 3
      password: "{{ bgp_peer_groups.EVPN_OVERLAY_PEERS.password }}"
      send_community: true
      maximum_routes: 0
{%     endif %}
{% endif %}