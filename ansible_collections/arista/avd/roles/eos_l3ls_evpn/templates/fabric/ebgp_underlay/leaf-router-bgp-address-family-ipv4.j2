{# leaf - address family ipv4 activation #}
{% if type == "l3leaf" %}
    peer_groups:
      EVPN-OVERLAY-PEERS:
        activate: false
{%     if (underlay_routing_protocol|upper == "BGP" or underlay_routing_protocol|upper == "EBGP") %}
      IPv4-UNDERLAY-PEERS:
        activate: true
{%            if leaf.mlag == true %}
      MLAG-IPv4-UNDERLAY-PEER:
        activate: true
{%            endif %}
{%     endif %}
{% endif %}
