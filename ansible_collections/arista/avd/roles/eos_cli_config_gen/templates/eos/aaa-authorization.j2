{# eos - aaa authorization #}
{% if aaa_authorization is defined and aaa_authorization is not none %}
{%     if aaa_authorization.exec_default is defined %}
aaa authorization exec default {{ aaa_authorization.exec_default }}
{%     endif %}
{%     if aaa_authorization.config_commands is defined and aaa_authorization.config_commands == false %}
no aaa authorization config-commands
{%     endif %}
{%     if aaa_authorization.console is defined and aaa_authorization.console == true %}
aaa authorization serial-console
{%     endif %}
{%     if aaa_authorization.commands.all_default is defined and aaa_authorization.commands.all_default != 'local' %}
aaa authorization commands all default {{ aaa_authorization.commands.all_default }}
{%     endif %}
{% endif %}
